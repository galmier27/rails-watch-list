<div id="show-image">
  <h1><%= @list.name %></h1>
</div>
<div class="container">
<div class="show-button">
  <%= link_to "Go Back", lists_path, class:"btn btn-light" %>
  <div>
    <%= link_to "+ Movie", new_list_bookmark_path(@list), class:"btn btn-secondary" %>


















    <%= link_to "Delete List", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"  %>
  </div>
</div>
<div class="cards-movie">
  <% @list.bookmarks.each do |bookmark|%>
    <div class="movie-card">
    <img src="<%= bookmark.movie.poster_url %>" alt="Photo du film <%= bookmark.movie.title %>" class="img-movie">
      <div class="movie-card-text">
        <div>
          <h3><%= bookmark.movie.title %></h3>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <div class="movie-card-footer">
          <div>
          <i class="fa-solid fa-quote-left mr-1"></i>
          <%= bookmark.comment %>
          </div>
          <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
<br>
